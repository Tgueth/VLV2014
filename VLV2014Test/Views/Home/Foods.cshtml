                                                            "",
                                                            "",
                                                            food.Name,
                                                            "Description: " + food.Description,
                                                            "",
                                                            "",
                                                            "",
                                                            "",
                                                            "");
                                    
                                {Html.RenderPartial("ULsection", sec1);}
                            }
                        }
                    </ul>
                </li>
                <li data-setname="Vegetarian">
                    <ul>
                        @{Table veggie = Model["Vegetarian"];}
                        @if (Model == null || Model.Count <= 0)
                        {
                            <li data-srcpreview="../images/vegetarian.jpg">
                                <div>
                                    <div class="content">
                                        <img src="../images/red_wine.jpg" alt="">
                                        <h3>List of foods is not yet available</h3>
                                        <p>Please check back later.</p>
                                    </div>
                                </div>
                            </li>
                        }
                        else
                        {
                            foreach (RevenueItem food in veggie)
                            {
                                <li data-srcpreview="../images/vegetarian.jpg">
                                    <div>
                                        <div class="content">
                                            @if (food.PictureLink == null || food.PictureLink.Image == null)
                                            {
                                                <img src="../images/red_wine.jpg" alt="">
                                            }
                                            else
                                            {
                                                <img src="@food.PictureLink.Image" alt="" height="@food.PictureLink.Height" width="@food.PictureLink.Width">
                                            }
                                            <h3>@food.AssignedTable</h3>
                                            <p style="font-weight:bold; font-size:16pt">@food.Name</p>
                                            <ul>
                                                <li><span>Description:</span> @food.Description</li>
                                            </ul>
                                            <div class="alright"></div>
                                        </div>
                                    </div>
                                </li>
