@using BinaryStarTechnology.CharityEventRevenueMgmtClasses
@using VLV2014Test.Models
@model WebPageItemsGroup
@{
    ViewBag.Title = "Wines";
    string link = null;
    MenuItems menuItems = VLV2014Test.Controllers.HomeController.menuItems;
}

<div id="TMGPrototype2">
    <div class="ic"></div>
    <h1><a href="index.cshtml"><img src="../images/VivaLaVinoSmaller.jpg" alt="Viva La Vino 2015"></a></h1>
    @foreach (WebPageItems items in Model)
    {
        <ul class='sets'>
            <li data-setname="@items.SectionName()">
                <ul>
                    @foreach (WebPageItem wine in items)
                    {
                        {Html.RenderPartial("ULsection", wine);}
                    }
                </ul>
            </li>
        </ul>
    }
    </div>

@section TopTabs
{
    @{Html.RenderPartial("MenuLine", menuItems);}
}

@section Scripts
{
    <script>
        $(window).load(function () {
            $('#TMGPrototype2').TMGPrototype2({});
        });
    </script>
}