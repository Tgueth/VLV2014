@using BinaryStarTechnology.CharityEventRevenueMgmtClasses
@using VLV2014Test.Models
@model BinaryStarTechnology.CharityEventRevenueMgmtClasses.RevenueItem

<li data-srcpreview="../images/red1.jpg">
    <div>
        <div class="content">
            @if(Model.PictureLink != null)
            {
                <img src="@Model.PictureLink.Image" alt="">
            }
            <h3>@Model.Item</h3>
            <p style="font-weight:bold;font-size:12pt">@Model.Name</p>
            @if(Model.Name != Model.Description)
            {
                <p>@Model.Description</p>
            }
            @if(Model.ItemValue > 1.0)
            { 
                <p>Valued at: @Model.ItemValue.ToString("C")</p>
            }
            <p> @(Model.DonatedByLink > -1 ? "Donated by:" + Model.DonatedByLink : "")</p>
            <ul>
                <li></li>
            </ul>
            <div class="alright"><!-- <a href="#" class="btn">Read More</a> --></div>
        </div>
    </div>
</li>
